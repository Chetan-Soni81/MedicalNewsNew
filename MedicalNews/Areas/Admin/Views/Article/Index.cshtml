@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Articles";
}

@model MedicalNews.Areas.Admin.Models.ArticleFilter

<div class="container-fluid p-0">
    <div class="notice-wrap">
        <label class="notice-wrap">@ViewData["Message"]</label>
    </div>
    <div class="mb-3">
        <h1 class="h3 d-inline align-middle">Article List</h1>
    </div>
    <div class="row">
        <div class="col-12 ">
            <div class="card">
                <div class="card-body">
                    <div class="col-12">

                        <form>
                            <div class="row">
                                <div class="col-md-2 col-sm-12">
                                    <label asp-for="FromDate" class="form-label text-center">From Date</label>
                                    <input type="date" class="form-control" asp-for=FromDate placeholder="Show From" />
                                    <span asp-validation-for="FromDate" class="text-danger"></span>
                                </div>
                                <div class="col-md-2 col-sm-12">
                                    <label asp-for="ToDate" class="form-label text-center">To Date</label>
                                    <input type="date" class="form-control" asp-for=ToDate placeholder="Show To" />
                                    <span asp-validation-for="ToDate" class="text-danger"></span>
                                </div>
                                <div class="col-md-3 col-sm-12">
                                    <label for="LinkTitle" class="form-label text-center">Category</label>
                                    <select class="form-control">
                                        <option Value="0">--All Category--</option>
                                    </select>
                                </div>
                                <div class="col-md-3 col-sm-12">
                                    <label for="LinkTitle" class="form-label text-center">Sub Category</label>
                                    <select ID="ddlArticleSubCategory" runat="server" class="form-control">
                                        <option Value="0">--All Sub Category--</option>
                                    </select>
                                </div>
                                <div class="col-2 p-4 mt-1">
                                    <button class="btn btn-block btn-success" type="submit" >Submit</button>
                                </div>
                            </div>
                        </form>


                        <div class="row bg-success">
                            <div class="col-md-12 col-sm-12">
                                <asp:Label ID="lblmsg" runat="server" CssClass="notice-wrap"></asp:Label>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="col-12 ">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">List Of Article </h5>
            </div>
            <div class="card-body">
                <div class="col-12">
                    <div class="row">
                        <table class="table table-striped table-bordered table-hover">
                            <tr>
                                <th>Title</th>
                                <th>Category</th>
                                <th>Sub Category</th>
                                <th>Posted Date</th>
                                <th>Action</th>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>